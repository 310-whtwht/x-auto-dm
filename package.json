{
  "name": "x-auto-dm",
  "version": "1.0.0",
  "description": "X Auto DM - フォロワーへの自動DM送信ツール",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron:dev": "npm run dev & sleep 5 && NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "lint": "next lint",
    "sync-chromedriver": "node scripts/sync-chromedriver.js"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/ibm-plex-sans-jp": "^5.2.5",
    "@mui/icons-material": "^5.16.14",
    "@mui/material": "^5.16.14",
    "@mui/material-nextjs": "^5.16.14",
    "@mui/x-data-grid": "^6.20.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@tanstack/react-table": "^8.13.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "csv-parse": "^5.6.0",
    "csv-stringify": "^6.5.2",
    "dayjs": "^1.11.13",
    "fs-extra": "^11.3.0",
    "idb": "^8.0.0",
    "lucide-react": "^0.344.0",
    "next": "^14.2.24",
    "papaparse": "^5.5.2",
    "puppeteer": "^22.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "selenium-webdriver": "^4.29.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@types/chromedriver": "^81.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.25",
    "@types/papaparse": "^5.3.15",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/selenium-webdriver": "^4.1.28",
    "chromedriver": "^139.0.1",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.3",
    "typescript": "^5.4.2"
  },
  "build": {
    "appId": "com.xautodm.app",
    "productName": "X Auto DM",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "dir",
          "arch": [
            "universal"
          ]
        }
      ],
      "category": "public.app-category.utilities"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  }
}
